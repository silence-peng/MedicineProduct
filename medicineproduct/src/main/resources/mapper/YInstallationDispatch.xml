<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ht.mapper.businessMapper.YInstallationDispatch">
    <!--分页 -->
    <select id="getInstallationDispatch" resultMap="getInstallationDispatchs">
        select * from distribute_leaflets a,staff b,customer d where a.sid=b.sid and a.cid=d.cid and type=1
        <if test="sname!=null and sname!=''">
            and b.sname=#{sname}
        </if>
        <if test="customerAddress!=null and customerAddress!=''">
            and d.customer_address=#{customerAddress}
        </if>
    </select>
    <!--column指向数据库列名 property指向pojo对象中字段名 -->
    <resultMap type="DistributeLeafletss" id="getInstallationDispatchs">
        <id property="did" column="did"/>
        <result property="sid" column="sid"/>
        <result property="cid" column="cid"/>
        <result property="oid" column="oid"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="createDate" column="createDate"/>
        <result property="endDate" column="endDate"/>
        <association property="staff">
            <id column="sid" property="sid"/>
            <result column="sname" property="sname"/>
        </association>
        <association property="customer">
            <id column="cid" property="cid"/>
            <result column="customer_address" property="customerAddress"/>
        </association>
    </resultMap>
    <delete id="deleInstallationDispatchs">
        delete from distribute_leaflets where did in
        <foreach collection="ids" item="ids" open="(" close=")" separator=",">
            #{ids}
        </foreach>
    </delete>
    <select id="getstaff" resultType="Staff">
select * from staff
    </select>
    <insert id="insert" parameterType="DistributeLeafletss">
    insert into distribute_leaflets(sid,cid,oid,type,createDate) values(#{sid},1,1,1,#{createDate})
    </insert>
</mapper>